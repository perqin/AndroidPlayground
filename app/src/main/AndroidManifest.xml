<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.perqin.playground">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".entry.EntryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="standard" />
        <activity
            android:name=".activities.SecondActivity"
            android:launchMode="singleTop"
            android:taskAffinity="com.perqin.playground.extra" />
        <activity
            android:name=".activities.ThirdActivity"
            android:launchMode="standard"
            android:taskAffinity="com.perqin.playground.extra" />
        <activity android:name=".indicatortint.IndicatorTintActivity" />
    </application>

</manifest>